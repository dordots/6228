{
  "name": "Soldier",
  "type": "object",
  "description": "Entity representing a soldier in the military unit",
  "properties": {
    "soldier_id": {
      "type": "string",
      "description": "Military personal number (unique)"
    },
    "id_number": {
      "type": "string",
      "description": "National ID number"
    },
    "first_name": {
      "type": "string",
      "description": "Soldier's first name"
    },
    "last_name": {
      "type": "string",
      "description": "Soldier's last name"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "Soldier's email address"
    },
    "street_address": {
      "type": "string",
      "description": "Soldier's street address"
    },
    "city": {
      "type": "string",
      "description": "Soldier's city"
    },
    "division_name": {
      "type": "string",
      "description": "Division assignment"
    },
    "team_name": {
      "type": "string",
      "description": "Team assignment"
    },
    "crew": {
      "type": "string",
      "description": "Crew assignment (if distinct from team)"
    },
    "profession": {
      "type": "string",
      "description": "Military profession/MOS"
    },
    "secondary_profession": {
      "type": "string",
      "description": "Secondary profession/MOS"
    },
    "phone_number": {
      "type": "string",
      "description": "Contact phone number"
    },
    "sex": {
      "type": "string",
      "description": "Gender"
    },
    "marital_status": {
      "type": "string",
      "description": "Marital status"
    },
    "date_of_birth": {
      "type": "string",
      "format": "date",
      "description": "Date of birth"
    },
    "trainings": {
      "type": "string",
      "description": "Trainings/qualifications (free text list)"
    },
    "driving_license": {
      "type": "string",
      "description": "Driving license indicator"
    },
    "driving_license_type": {
      "type": "string",
      "description": "Type/category of driving license"
    },
    "enlistment_status": {
      "type": "string",
      "enum": ["expected", "arrived"],
      "default": "expected",
      "description": "Enlistment process status"
    },
    "arrival_date": {
      "type": "string",
      "format": "date",
      "description": "Date when soldier arrived for enlistment"
    }
  },
  "required": ["soldier_id", "first_name", "last_name"]
}
